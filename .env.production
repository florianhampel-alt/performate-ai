# Performate AI - Production Environment Configuration

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME=Performate AI
VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO
SECRET_KEY=CHANGE-ME-IN-PRODUCTION-DASHBOARD

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
ALLOWED_HOSTS=performate-ai-backend.onrender.com,performate-ai.vercel.app

# =============================================================================
# OPENAI CONFIGURATION (SET IN DASHBOARD)
# =============================================================================
# OPENAI_API_KEY=sk-your-production-key-here

# =============================================================================
# AWS S3 CONFIGURATION (SET IN DASHBOARD)
# =============================================================================
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET=performate-ai-uploads

# =============================================================================
# REDIS CONFIGURATION (UPSTASH CLOUD REDIS - SET IN DASHBOARD)
# =============================================================================
# UPSTASH_REDIS_REST_URL=https://your-redis-instance.upstash.io
# UPSTASH_REDIS_REST_TOKEN=your-upstash-token
# Fallback to local Redis for development
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# ANALYSIS SETTINGS (PRODUCTION-OPTIMIZED)
# =============================================================================
MAX_ANALYSIS_FRAMES=5
ANALYSIS_TIMEOUT=180  # 3 minutes
MAX_FILE_SIZE=104857600  # 100MB
ALLOWED_EXTENSIONS=.mp4,.avi,.mov,.mkv
ENABLE_AI_ANALYSIS=true

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
NEXT_PUBLIC_API_URL=https://performate-ai.onrender.com
NEXT_PUBLIC_APP_NAME=Performate AI
NEXT_TELEMETRY_DISABLED=1

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
ACCESS_TOKEN_EXPIRE_MINUTES=30
ENABLE_CORS=true

# =============================================================================
# MONITORING & LOGGING (PRODUCTION)
# =============================================================================
LOG_FILE=performate-ai.log
ENABLE_METRICS=true