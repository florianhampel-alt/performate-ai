# Performate AI Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME=Performate AI
VERSION=1.0.0
DEBUG=true
LOG_LEVEL=INFO
SECRET_KEY=your-super-secret-key-change-in-production

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
ALLOWED_HOSTS=localhost,127.0.0.1,localhost:3000

# =============================================================================
# OPENAI CONFIGURATION
# =============================================================================
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-vision-preview

# =============================================================================
# AWS S3 CONFIGURATION
# =============================================================================
# For production, use real AWS credentials
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1
S3_BUCKET=performate-ai-uploads

# For development with LocalStack (leave as-is for local development)
# AWS_ENDPOINT_URL=http://localhost:4566

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# CELERY/WORKER CONFIGURATION
# =============================================================================
BROKER_URL=redis://localhost:6379/0
RESULT_BACKEND=redis://localhost:6379/0

# =============================================================================
# DATABASE CONFIGURATION (Optional - for future use)
# =============================================================================
DATABASE_URL=sqlite:///./performate-ai.db

# =============================================================================
# FILE UPLOAD SETTINGS
# =============================================================================
MAX_FILE_SIZE=104857600  # 100MB in bytes
ALLOWED_EXTENSIONS=.mp4,.avi,.mov,.mkv,.wmv

# =============================================================================
# ANALYSIS SETTINGS
# =============================================================================
MAX_ANALYSIS_FRAMES=30
ANALYSIS_TIMEOUT=300  # 5 minutes in seconds

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_NAME=Performate AI
NEXT_TELEMETRY_DISABLED=1

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
ACCESS_TOKEN_EXPIRE_MINUTES=30
ENABLE_CORS=true

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
LOG_FILE=performate-ai.log
ENABLE_METRICS=false
METRICS_PORT=9090

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Set to true for development
USE_LOCAL_STORAGE=false
LOCAL_UPLOAD_DIR=./uploads

# =============================================================================
# PRODUCTION SETTINGS (uncomment for production)
# =============================================================================
# NODE_ENV=production
# DEBUG=false
# LOG_LEVEL=WARNING
# ALLOWED_HOSTS=your-domain.com,api.your-domain.com
# MAX_FILE_SIZE=52428800  # 50MB for production
# MAX_ANALYSIS_FRAMES=20

# =============================================================================
# OPTIONAL: EMAIL CONFIGURATION (for future notifications)
# =============================================================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# FROM_EMAIL=noreply@performate-ai.com

# =============================================================================
# OPTIONAL: SENTRY ERROR TRACKING
# =============================================================================
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# =============================================================================
# OPTIONAL: ANALYTICS
# =============================================================================
# GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
# MIXPANEL_TOKEN=your-mixpanel-token
